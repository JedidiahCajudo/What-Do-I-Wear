<div class="container-fluid d-flex align-items-center justify-content-center" style="height: 100vh;">
  <div class="background-image-home">
    <div class="row justify-content-center">
      <div class="col-12 col-md-8 col-lg-6">
        <%= simple_form_for(@outfit) do |f| %>
          <!-- File upload for photo -->
          <div class="form-group">
            <%= f.input :photo, as: :file, label: "Upload Photo", input_html: { class: "form-control" } %>
          </div>
          <!-- Outfit name field -->
          <div class="form-group">
            <%= f.label :name, "Name your outfit", class: "text-white" %>
            <%= f.text_field :name, class: 'form-control', placeholder: 'Enter outfit name', required: true %>
            <% if @outfit.errors[:name].any? %>
              <div class="text-danger">
                <%= @outfit.errors[:name].join(", ") %>
              </div>
            <% end %>
          </div>
          <!-- Hidden field for user -->
          <%= f.hidden_field :user %>
          <!-- Submit button -->
          <div class="form-group text-center mt-3">
            <%= f.button :submit, "Create Outfit", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
